<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_system_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@color/colorHint"
        android:layout_centerHorizontal="true"
        android:padding="5dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_system_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_below="@id/tv_system_msg_time"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_system_msg_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳蚤市场"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_goodsmarket"
                android:drawablePadding="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCut"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_system_msg_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_margin="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCut"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_system_msg_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_mylikegoods_like"
                android:text="删除"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>