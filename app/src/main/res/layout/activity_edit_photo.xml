<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_editphoto_dialog"
        android:paddingTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_editphoto_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/nav_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <Button
                android:id="@+id/btn_editphoto_takephoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:textSize="20sp"
                android:textColor="@color/colorLightOrange"
                android:background="@drawable/bg_btn_stroke"/>

            <Button
                android:id="@+id/btn_editphoto_choosephoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="从相册选择"
                android:textSize="20sp"
                android:textColor="@color/colorLightOrange"
                android:background="@drawable/bg_btn_stroke"
                android:padding="10dp"
                android:layout_marginLeft="30dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorCut"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_editphoto_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="20sp"
                android:textColor="@color/colorLoginButton"
                android:gravity="center"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorCut"/>

            <TextView
                android:id="@+id/tv_editphoto_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="保存"
                android:textSize="20sp"
                android:textColor="@color/colorLoginButton"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_editphoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>