<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_find_goods_all"
    android:layout_width="160dip"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <ImageView
        android:id="@+id/iv_find_goods_pic"
        android:layout_width="140dip"
        android:layout_height="140dip" />

    <TextView
        android:id="@+id/tv_find_goods_goods_name"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/iv_find_goods_pic"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:maxLines="3"
        android:ellipsize="end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/tv_find_goods_goods_name"
        android:background="@color/colorCut"/>

    <RelativeLayout
        android:id="@+id/rl_find_goods_user"
        android:layout_width="140dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_find_goods_goods_name"
        android:layout_marginTop="5dip">
        <ImageView
            android:id="@+id/iv_find_goods_user_photo"
            android:layout_width="30dip"
            android:layout_height="30dip" />
        <TextView
            android:id="@+id/tv_find_goods_user_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_find_goods_user_photo"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_find_goods_user"
        android:layout_marginTop="2dip">
        <TextView
            android:id="@+id/tv_find_goods_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="来过"/>
    </LinearLayout>

</RelativeLayout>